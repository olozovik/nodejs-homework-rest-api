      "post": {
        "tags": ["Contacts"],
        "summary": "Add a new contact",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "description": "Token is given to the user",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Contact"
              },
              "example": {
                "name": "Homer Simpson",
                "phone": "555-55-55"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Contacts are received",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 201,
                  "contact": {
                    "name": "Homer Simpson",
                    "phone": "555-55-55",
                    "favorite": false,
                    "owner": "620e3c05f899ba43a786a0fc",
                    "_id": "620fa25c7d81d1e701f55a3d",
                    "createdAt": "2022-02-18T13:42:52.136Z",
                    "updatedAt": "2022-02-18T13:42:52.136Z"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Not authorized"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    },
    "/contacts/{contactId}": {
      "get": {
        "tags": ["Contacts"],
        "summary": "Get contact by Id",
        "parameters": [
          {
            "in": "header",
            "name": "Authorization",
            "required": true,
            "description": "Token is given to the user",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "path",
            "name": "contactId",
            "required": true,
            "description": "Contact Id",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Contacts are received",
            "content": {
              "application/json": {
                "example": {
                  "status": "success",
                  "code": 200,
                  "contact": {
                    "_id": "620fa25c7d81d1e701f55a3d",
                    "name": "Homer Simpson",
                    "phone": "555-55-55",
                    "favorite": false,
                    "owner": {
                      "_id": "620e3c05f899ba43a786a0fc",
                      "email": "oldisc3@gmail.com"
                    },
                    "createdAt": "2022-02-18T13:42:52.136Z",
                    "updatedAt": "2022-02-18T13:42:52.136Z"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Not authorized"
          },
          "404": {
            "description": "The contact is not found"
          },
          "500": {
            "description": "Server error"
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "required": ["email", "password"],
        "properties": {
          "email": {
            "type": "string",
            "description": "User email (needs to confirm)"
          },
          "password": {
            "type": "string",
            "description": "User password (min 5 characters)"
          }
        }
      },
      "UserSubscription": {
        "type": "object",
        "required": ["subscription"],
        "properties": {
          "subscription": {
            "type": "string",
            "description": "A type of subscription",
            "enum": ["starter", "pro", "business"]
          }
        }
      },
      "Contact": {
        "type": "object",
        "required": ["name", "phone"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Contact's name"
          },
          "phone": {
            "type": "string",
            "description": "Contact's phone number"
          }
        }
      }
    }
  }
}
